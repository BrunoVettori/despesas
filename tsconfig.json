{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@auth/*": ["./src/auth/*"],
      "@database/*": ["./src/database/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@modules/*": ["./src/modules/*"],
      "@routes/*": ["./src/routes/*"]
    }
  }
}
