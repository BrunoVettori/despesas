{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "format": [
    "camelCase",
    "strictCamelCase",
    "PascalCase",
    "StrictPascalCase",
    "snake_case",
    "UPPER_CASE"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "variable",
        "format": ["snake_case", "camelCase"]
      }
    ]
  }
}
