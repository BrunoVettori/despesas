// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  id            String          @id @default(uuid())
  nome          String
  sobrenome     String
  documento     String          @unique
  email         String          @unique
  senha         String
  salario       Decimal
  data_salario  Int?
  vale          Decimal?
  data_vale     Int?
  ativo         Boolean         @default(true)
  created_at    DateTime        @default(now())
  updated_at    DateTime?       @updatedAt
  despesas      despesas[]
  usuario_grupo usuario_grupo[]
}

model usuario_grupo {
  id         String          @id @default(uuid())
  gurpo      gurpo?          @relation(fields: [gurpo_id], references: [id])
  gurpo_id   String?
  usuario    usuario?        @relation(fields: [usuario_id], references: [id])
  usuario_id String?
  permissao  permissao_grupo
  created_at DateTime        @default(now())
  updated_at DateTime?       @updatedAt
}

model gurpo {
  id            String          @id @default(uuid())
  nome          String
  usuario_grupo usuario_grupo[]
  despesas      despesas[]
  ativo         Boolean         @default(true)
  created_at    DateTime        @default(now())
  updated_at    DateTime?       @updatedAt
}

model despesas {
  id               String        @id @default(uuid())
  categoria        categoria     @relation(fields: [categoria_id], references: [id])
  categoria_id     String
  descricao        String
  valor            Decimal
  data             DateTime      @default(now())
  pagamento        pagamento
  usuario          usuario       @relation(fields: [usuario_id], references: [id])
  usuario_id       String
  gurpo            gurpo?        @relation(fields: [gurpo_id], references: [id])
  gurpo_id         String?
  despesa_conjunta Boolean       @default(false)
  parcelado        Boolean       @default(false)
  parcelas         parcelas?     @relation(fields: [parcelas_id], references: [id])
  parcelas_id      String?
  created_at       DateTime      @default(now())
  updated_at       DateTime?     @updatedAt
  recorrencia      recorrencia[]
}

model categoria {
  id        String     @id @default(uuid())
  categoria String
  despesas  despesas[]
}

model parcelas {
  id              String     @id @default(uuid())
  data_inicio     DateTime
  total_vezes     Int
  valor_parcelado Int
  valor_total     Int
  juros           Int
  created_at      DateTime   @default(now())
  updated_at      DateTime?  @updatedAt
  despesas        despesas[]
}

model recorrencia {
  id               String    @id @default(uuid())
  despesa          despesas  @relation(fields: [despesas_id], references: [id])
  despesas_id      String
  data_recorrencia DateTime  @default(now())
  ativo            Boolean   @default(true)
  created_at       DateTime  @default(now())
  updated_at       DateTime? @updatedAt
}

enum permissao_grupo {
  owner
  adm
  user
}

enum pagamento {
  dinheiro
  vale
  transferencia
  cartao_credito
  cartao_debito
  fiado
}
